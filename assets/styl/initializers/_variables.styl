// main colours
primaryColor = #01658F
secondaryColor = #6FC162
//primaryColor = black 
//secondaryColor = black 

// greys
lightestGrey = #f6f6f6
lighterGrey = #dcdcdc
lightGrey = #b2b2b2
grey = #7F7F7F
darkGrey = #5d5d5d
darkerGrey = #333
darkestGrey = #111

// messaging colours
noticeColor = #5BC0DE
successColor = #5CB85C
errorColor = #D9534F
warningColor = #F0AD4E

// transitions
bounce = cubic-bezier(0.145, 0.420, 0.425, 1.650)
bounceOut = cubic-bezier(.5, -0.85, .73, .52)

// other variables
radius = 3px
primaryNavWidth = 100px
secondaryNavWidth = 200px

// clearfix helper
clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

// breakpoints
palmBreakpoint = "(max-width: 480px)"
lapBreakpoint = "(min-width: 481px) and (max-width: 1023px)"
deskBreakpoint = "(min-width: 1024px)"
portableBreakpoint = "(max-width: 1023px)"
largeBreakpoint = "(min-width: 481px)"
