// main colours
primaryColor = #01658F
secondaryColor = #6FC162
//primaryColor = black 
//secondaryColor = black 

// greys
lightestGrey = #f6f6f6
lighterGrey = #dcdcdc
lightGrey = #b2b2b2
grey = #7F7F7F
darkGrey = #5d5d5d
darkerGrey = #333
darkestGrey = #111

// messaging colours
noticeColor = #5BC0DE
successColor = #5CB85C
errorColor = #D9534F
warningColor = #F0AD4E

// transitions
bounce = cubic-bezier(0.145, 0.420, 0.425, 1.650)
bounceOut = cubic-bezier(.5, -0.85, .73, .52)

// other variables
radius = 3px
primaryNavWidth = 100px
secondaryNavWidth = 200px

// clearfix helper
clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

/*!!!
 * section: Grid
 * description: The grid system used for Urban Adventures is a modified version of the [CSS Wizardry Grid](https://github.com/csswizardry/csswizardry-grids). The updated grid includes one additional breakpoint named "large".
 * example: |
 *   <div class="grid">
 *     <div class="grid__item one-third"><div class="card">Palm</div></div>
 *     <div class="grid__item one-third"><div class="card">Lap</div></div>
 *     <div class="grid__item one-third"><div class="card">Desk</div></div>
 *   </div>
 *   <div class="grid">
 *     <div class="grid__item two-thirds"><div class="card">Portable</div></div>
 *   </div>
 *   <div class="grid">
 *     <div class="grid__item one-third"></div>
 *     <div class="grid__item two-thirds"><div class="card">Large</div></div>
 *   </div>
 */

// breakpoints
palmBreakpoint = "(max-width: 480px)"
lapBreakpoint = "(min-width: 481px) and (max-width: 1023px)"
deskBreakpoint = "(min-width: 1024px)"
portableBreakpoint = "(max-width: 1023px)"
largeBreakpoint = "(min-width: 481px)"
