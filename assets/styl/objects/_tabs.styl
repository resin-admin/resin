.tabTrigger
  padding: 0
  margin: 0
  list-style-type: none
  clearfix()
  li
    float: left
    border: 1px solid lighter-grey
    background: lightest-grey
    padding: 10px 25px
    cursor: pointer
    &:first-child
      border-top-left-radius: radius
    &:last-child
      border-top-right-radius: radius
    &.is-active
      background: white
      cursor: default
      border-bottom-color: white

.tabContent
  padding: 0
  margin: 0
  list-style-type: none
  margin-top: -1px
  margin-bottom: 20px
  li
    display: none
    border: 1px solid lighter-grey
    padding: 25px
    border-radius: radius
    border-top-left-radius: 0
    &.is-active
      display: block
      background: white
