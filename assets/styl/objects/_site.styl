*, *:before, *:after
  -moz-box-sizing border-box 
  -webkit-box-sizing border-box 
  box-sizing border-box

html, body
  margin 0
  width 100%
  height 100%
  font-family 'Lato', sans-serif

a
  color primaryColor

h1, h2, h3, h4, h5, h6
  margin-top 0
  color secondaryColor 

p
  margin-top 0

.site-wrapper
  display table
  width 100%
  height 100%

.site-primary-nav,
.site-secondary-nav,
.site-body
  display table-cell
  vertical-align top

.site-section
  margin-bottom 50px

.logo
  max-width 80px
  margin-top 10px
  border-radius radius
  border-bottom 2px solid darken(primaryColor, 10)

.site-body
  background white
  padding 25px

.square
  position relative
  > *
    position absolute
    top 0
    left 0
    bottom 0
    right 0
  &:before
    content ''
    display block
    padding-top 100%

.wide
  width 100%
  display block

.site-header
  border-bottom 1px solid #eee
  margin-bottom 25px
  padding-bottom 25px
  > *
    margin 0


.site-body anot([class])
  //text-decoration none
  position relative
  &:after
    content ''
    display inline
    background primaryColor
    height 2px 
    width auto
