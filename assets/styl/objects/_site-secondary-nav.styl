.site-secondary-nav
  position fixed
  left 0 
  width secondaryNavWidth + primaryNavWidth
  top 0
  height 100%
  z-index 3
  background lightestGrey 
  padding 25px
  padding-left primaryNavWidth + 25px
  a
    transition all 0.1s ease-in-out
    display block
    text-decoration none
    padding 10px 0
    color lightGrey 
    font-size 14px
    &.active, &:hover
      color primaryColor
    &.active
      position relative
      font-weight bold
      cursor default
      &:after
        content ''
        display block
        position absolute
        left 100%
        top 50%
        border-left 10px solid lightestGrey 
        border-top 10px solid transparent
        border-bottom 10px solid transparent
        width 0
        height 0
        margin-left 25px
        margin-top -10px
    &:hover .fa
      transform scale(1.2)
      margin-right 10px
    &.active:hover .fa
      transform scale(1)
      margin-right 8px
  .fa
    transition all 0.1s ease-in-out
    font-size 20px
    margin-right 8px
    vertical-align middle
  .nav-group
    border-bottom 1px solid lighterGrey
    margin-bottom 8px
    padding-bottom 8px
    &:last-child
      border-bottom 0
      padding-bottom 0
  .nav-title
    margin-bottom 5px

.site-language
  margin-left: -25px
  margin-top: -25px
  margin-right: -25px
  margin-bottom: 10px
  padding: 8px
  select
    color: darkGrey
    background-color: lighterGrey
    padding: 5px
    border-radius: radius
    border: 0
    background-position: right 5px center
