input-fields = "input[type='text'], input[type='password'], textarea, select, .form-cap"

form, .form-groups
  margin-bottom: -25px

/*!!!
section: Forms
title: Fieldset
jade: |
  form
    fieldset
      .form-group
        input#address(type="text", placeholder="123 Sunshine St.")
        label(for="address") Address
      .form-group
        input#postal(type="text", placeholder="L4C 1B2")
        label(for="postal") Postal Code
*/

/*!!!
section: Forms
title: Inline Forms
jade: |
  .card
    .form-groups.form-groups--inline
      .form-group.form-group--small
        select
          option All Authors
          option Mark Appleby
          option Jane Doe
        label Filter by Author
      .form-group.form-group--small
        input(type='text', placeholder='Splitting Hairs')
        label Filter by Name
      .form-group.form-group--small
        a.secondary.button(href='#') Filter
*/
.form-groups--inline
  margin-left: -25px
  //margin-bottom: 0
  .form-group
    display: inline-block
    margin-left: 25px
    //margin-bottom: 0
    vertical-align: bottom
    padding-top: 0
  {input-fields}
    width: auto
    min-width: 100px
    margin-top: 15px

fieldset
  border: 0
  border-left: 3px solid grey
  padding: 25px
  padding-bottom: 0
  margin-bottom: 25px

/*!!!
section: Forms
title: (Normal) Input Field
jade: |
  form
    .form-group
      input#firstName(type="text", placeholder="Susan")
      label(for="firstName") First Name
*/
.form-group
  display: block
  margin-bottom: 25px
  position: relative
  padding-top: 13px

/*!!!
section: Forms
title: Large Input Field
jade: |
  form
    .form-group.form-group--large
      input#title(type="text", placeholder="The Lord of the Rings")
      label(for="title") Title
*/
.form-group--large
  {input-fields}
    font-size: 3em
{input-fields}
  font-size: 2em

/*!!!
section: Forms
title: Small Input Field
jade: |
  form
    .form-group.form-group--small
      input#lastName(type="text", placeholder="Sanders")
      label(for="lastName") Last Name
*/
.form-group--small
  padding-top: 15px
  {input-fields}
    font-size: 1.3em

/*!!!
section: Forms
title: Error
jade: |
  form
    .form-group.form-group--error
      input#age(type="text", placeholder="34")
      label(for="age") Age
      .form-error This field is required
*/
.form-group--error
  label
    color: errorColor !important
  {input-fields}
    color: errorColor
    border-bottom-color: error-color
    border-bottom-width: 2px

.form-error
  color: error-color
  margin-top: 2px
  font-size: 12px
  font-weight: bold

label
  font-size: 12px 
  color: grey
  position: absolute
  top: 0
  left: 0
  transition: color 0.2s ease-in-out

{input-fields}
  display: block
  width: 100%
  border: 0
  outline: none
  border-bottom: 1px solid grey
  transition border-bottom-color 0.2s ease-in-out
  resize: none
  background: transparent
  &:focus, &:hover
    border-bottom-color: primary-color
    outline: none
    + label
      color: primary-color

/*!!!
section: Forms
title: Select
jade: |
  .form-group
    select#size
      option Select a size
      option Small
      option Medium
      option Large
    label(for="size") Size
*/
select
  border-radius: 0
  -moz-appearance: none
  -webkit-appearance: none
  padding-right: 20px
  text-indent: 0.01px
  text-overflow: ''
  background-repeat: no-repeat
  background-position: center right
  padding-bottom: 1px
  background-image: url('data:image/gif;base64,')

select:-moz-focusring 
  color: transparent
  text-shadow: 0 0 0 #000

::-webkit-input-placeholder
  color: lighter-grey

:-moz-placeholder
  color: lighter-grey

::-moz-placeholder
  color: lighter-grey

:-ms-input-placeholder
  color: lighter-grey

/*!!!
section: Forms
title: Textarea
jade: |
  .form-group
    textarea#description(placeholder="blonde hair and blue eyes")
    label(for="description") Description
*/
.form-cap
  padding-bottom: 2px
  &:hover
    border-bottom-color: grey
