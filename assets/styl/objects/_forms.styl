inputFields = "input[type='text'], input[type='password'], textarea, select"

.form-group
  display: block
  margin-bottom: 25px
  position: relative
  padding-top: 13px
  &.large
    {inputFields}
      font-size: 3em
  {inputFields}
    font-size: 2em
  &.small
    padding-top: 15px
    {inputFields}
      font-size: 1.3em
  &.error
    label
      color: alertColor !important
    {inputFields}
      color: alertColor
      border-bottom-color: alertColor
      border-bottom-width: 2px

.form-error
  color: alertColor
  margin-top: 2px
  font-size: 12px
  font-weight: bold

label
  font-size: 12px 
  color: greyColor
  position: absolute
  top: 0
  left: 0
  transition: color 0.2s ease-in-out

{inputFields}
  display: block
  width: 100%
  border: 0
  outline: none
  border-bottom: 1px solid greyColor
  transition border-bottom-color 0.2s ease-in-out
  resize: none
  &:focus
    border-bottom-color: primaryColor
    outline: none
    + label
      color: primaryColor

select
  background: white
  border-radius: 0
  -moz-appearance: none
  -webkit-appearance: none
  text-indent: 0.01px
  text-overflow: ''
  background-repeat: no-repeat
  background-position: center right
  background-image: url('data:image/gif;base64,')

select:-moz-focusring 
  color: transparent
  text-shadow: 0 0 0 #000

::-webkit-input-placeholder
  color: lightGreyColor

:-moz-placeholder
  color: lightGreyColor 

::-moz-placeholder
  color: lightGreyColor

:-ms-input-placeholder
  color: lightGreyColor
