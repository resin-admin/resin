.form-group
  display: block
  margin-bottom: 20px
  position: relative

label
  font-size: 12px 
  color: greyColor
  position: absolute
  top: 0
  left: 0
  transition: color 0.2s ease-in-out

input[type='text'],
input[type='password']
  display: block
  font-size: 2em
  width: 100%
  border: 0
  outline: none
  border-bottom: 1px solid greyColor
  transition border-bottom-color 0.2s ease-in-out
  padding-top: 15px
  &:focus
    border-bottom-color: primaryColor
    + label
      color: primaryColor

::-webkit-input-placeholder
  color: lightGreyColor

:-moz-placeholder
  color: lightGreyColor 

::-moz-placeholder
  color: lightGreyColor

:-ms-input-placeholder
  color: lightGreyColor
