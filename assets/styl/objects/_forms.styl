.form-group
  display: block
  margin-bottom: 20px

label
  color: primaryColor
  width: 100%
  display: block
  text-transform: uppercase
  font-size: 10px

input[type='text'],
input[type='password']
  display: block
  font-size: 2em
  width: 100%
  border: 0
  outline: none

::-webkit-input-placeholder
  color: greyColor 

:-moz-placeholder
  color: greyColor 

::-moz-placeholder
  color: greyColor

:-ms-input-placeholder
  color: greyColor
