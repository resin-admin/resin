inputFields = "input[type='text'], input[type='password'], textarea, select, .form-cap"

form, .form-groups
  margin-bottom: -25px

/*!!!
 * section: Forms
 * title: Fieldset
 * example: |
 *   <form>
 *     <fieldset>
 *       <div class="form-group">
 *         <input id="address" type="text" placeholder="123 Sunshine St." />
 *         <label for="address">Address</label>
 *       </div>
 *       <div class="form-group">
 *         <input id="postal" type="text" placeholder="L4C 1B2" />
 *         <label for="postal">Postal Code</label>
 *       </div>
 *     </fieldset>
 *   </form>
 */

.form-groups
  &.inline
    margin-left: -25px
    .form-group
      display: inline-block
      margin-left: 25px
      margin-bottom: 0
    {inputFields}
      width: auto
      min-width: 100px


fieldset
  border: 0
  border-left: 3px solid grey
  padding: 25px
  padding-bottom: 0
  margin-bottom: 25px

/*!!!
 * section: Forms
 * title: (Normal) Input Field
 * example: |
 *   <form>
 *     <div class="form-group">
 *       <input id="firstName" type="text" placeholder="Susan" />
 *       <label for="firstName">First Name</label>
 *     </div>
 *   </form>
 */
.form-group
  display: block
  margin-bottom: 25px
  position: relative
  padding-top: 13px
  /*!!!
   * section: Forms
   * title: Large Input Field
   * example: |
   *   <form>
   *     <div class="large form-group">
   *       <input id="title" type="text" placeholder="The Lord of the Rings" />
   *       <label for="title">Title</label>
   *     </div>
   *   </form>
   */
  &.large
    {inputFields}
      font-size: 3em
  {inputFields}
    font-size: 2em
  /*!!!
   * section: Forms
   * title: Small Input Field
   * example: |
   *   <form>
   *     <div class="small form-group">
   *       <input id="lastName" type="text" placeholder="Sanders" />
   *       <label for="lastName">Last Name</label>
   *     </div>
   *   </form>
   */
  &.small
    padding-top: 15px
    {inputFields}
      font-size: 1.3em
  /*!!!
   * section: Forms
   * title: Error
   * example: |
   *   <form>
   *     <div class="form-group error">
   *       <input id="age" type="text" placeholder="34" />
   *       <label for="age">Age</label>
   *       <div class="form-error">This field is required</div>
   *     </div>
   *   </form>
   */
  &.error
    label
      color: errorColor !important
    {inputFields}
      color: errorColor
      border-bottom-color: errorColor
      border-bottom-width: 2px

.form-error
  color: errorColor
  margin-top: 2px
  font-size: 12px
  font-weight: bold

label
  font-size: 12px 
  color: grey
  position: absolute
  top: 0
  left: 0
  transition: color 0.2s ease-in-out

{inputFields}
  display: block
  width: 100%
  border: 0
  outline: none
  border-bottom: 1px solid grey
  transition border-bottom-color 0.2s ease-in-out
  resize: none
  background: transparent
  &:focus, &:hover
    border-bottom-color: primaryColor
    outline: none
    + label
      color: primaryColor

/*!!!
 * section: Forms
 * title: Select
 * example: |
 *   <div class="form-group">
 *     <select id="size">
 *       <option>Select a size</option>
 *       <option>Small</option>
 *       <option>Medium</option>
 *       <option>Large</option>
 *     </select>
 *     <label for="size">Size</label>
 *   </div>
 */
select
  border-radius: 0
  -moz-appearance: none
  -webkit-appearance: none
  padding-right: 20px
  text-indent: 0.01px
  text-overflow: ''
  background-repeat: no-repeat
  background-position: center right
  padding-bottom: 1px
  background-image: url('data:image/gif;base64,')

select:-moz-focusring 
  color: transparent
  text-shadow: 0 0 0 #000

::-webkit-input-placeholder
  color: lighterGrey

:-moz-placeholder
  color: lighterGrey

::-moz-placeholder
  color: lighterGrey

:-ms-input-placeholder
  color: lighterGrey

/*!!!
 * section: Forms
 * title: Textarea
 * example: |
 *   <div class="form-group">
 *     <textarea id="description" placeholder="blonde hair and blue eyes"></textarea>
 *     <label for="description">Description</label>
 *   </div>
 */

.form-cap
  padding-bottom: 2px
  &:hover
    border-bottom-color: grey
