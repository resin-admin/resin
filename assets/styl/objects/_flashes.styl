/*!!!
section: Flash
title: Flash (default)
jade: |
  .flash Hello, I'm the default flash message. <i class="flash-close fa fa-times"></i>
*/
.flash
  @extend .flipInX
  padding: 15px
  background: blue
  border-radius: radius
  background: noticeColor
  color: white
  margin-bottom: 20px
  position: relative
  overflow: hidden
  .flash-close
    color: noticeColor
  
  &:before, &:after
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 2px
    background: rgba(white, 0.25)
  &:after
    background: rgba(black, 0.25)
    top: auto
    bottom: 0

  /*!!!
  section: Flash
  title: Success Flash
  html: |
    <div class="success flash">
      Congratulations! I'm a success flash message.
      <i class="flash-close fa fa-times"></i>
    </div>
  */
  &.success
    background: successColor 
    .flash-close
      color: successColor

  /*!!!
  section: Flash
  title: Error Flash
  html: |
    <div class="error flash">
      Uh-oh! I'm an error flash message.
      <i class="flash-close fa fa-times"></i>
    </div>
  */
  &.error
    background: errorColor 
    .flash-close
      color: errorColor

  /*!!!
  section: Flash
  title: Warning Flash
  html: |
    <div class="warning flash">
      Watch out! I'm a warning flash message.
      <i class="flash-close fa fa-times"></i>
    </div>
  */
  &.warning
    background: warningColor 
    .flash-close
      color: warningColor

.flash-close
  position: absolute
  top: 15px 
  right: 15px 
  padding: 2px
  border-radius: 100%
  width: 20px
  height: 20px
  text-align: center
  background: white
  cursor: pointer
  transition: all 0.2s ease-in-out
  &:hover
    opacity: 0.7
