.card
  border 1px solid #ccc
  padding 20px
  position relative
  border-radius radius

.card-alert
  box-shadow 0 2px 3px rgba(black, 0.1)
  transform scale(0)
  animation scaleIn 0.3s bounce
  animation-fill-mode forwards
  background alertColor 
  border-bottom 2px solid darken(alertColor, 10)
  color white
  font-weight bold
  border-radius radius 
  padding 5px 8px
  position absolute
  top -10px 
  right -10px 
